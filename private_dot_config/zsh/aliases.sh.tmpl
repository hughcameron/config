# Aliases

# Chezmoi
alias cm='chezmoi'
alias cmts='cm-target-to-source'
alias cmup='cm-source-update'

# Homebrew
alias brewup='brew upgrade'

# Git
alias lg='lazygit'

# Claude
alias cc='claude'

# Navi
alias n='navi'

# Claude Agent Invoke
alias ng='claude --agent nightingale --dangerously-skip-permissions --verbose'
alias st='claude --agent stringer --dangerously-skip-permissions --verbose'
alias hl='claude --agent halliday --dangerously-skip-permissions --verbose'
alias mg='claude --agent mcgill --dangerously-skip-permissions --verbose'
alias cs='claude --agent carson --verbose'
alias at='claude --agent arthur --verbose'

{{ if eq .chezmoi.os "darwin" -}}
# Remote agent sessions
alias bb='ssh beelink'

# Finder / Terminal
alias peek='open .'
alias tap='open -a Terminal'

# Msgvault
alias em='msgvault'

# Nushell analysis scripts (kept as nu invocations)
alias bt='nu ~/.config/nushell/analysis/brewtrend/brewtrend.nu'
alias ccu='nu ~/.config/nushell/analysis/claude-usage/claude-usage.nu'
alias gcpvm='nu ~/.config/nushell/scripts/gcpvm.nu'

# DuckDB via navi
alias dx='navi --query "duckdb -f <file>" --best-match'
alias dv='navi --query "duckdb -json -f <file> | vd -f json" --best-match'
alias dj='navi --query "duckdb -json -f <file> | jless" --best-match'
{{ end -}}

{{ if eq .chezmoi.os "linux" -}}
alias ci='curl -fsSL https://claude.ai/install.sh | bash'
{{ end -}}
